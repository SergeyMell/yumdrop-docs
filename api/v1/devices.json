{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "http://localhost:3000",
  "resourcePath": "devices",
  "apis": [
    {
      "path": "/api/devices",
      "operations": [
        {
          "summary": "Register device for push receiving",
          "parameters": [
            {
              "paramType": "header",
              "name": "AUTHTOKEN",
              "type": "string",
              "description": "Authentication token",
              "required": false
            },
            {
              "paramType": "query",
              "name": "uid",
              "type": "string",
              "description": "Device unique ID",
              "required": true
            },
            {
              "paramType": "query",
              "name": "token",
              "type": "string",
              "description": "Device token",
              "required": true
            }
          ],
          "nickname": "Api::V1::Devices#create",
          "method": "post"
        }
      ]
    },
    {
      "path": "/api/devices/{id}",
      "operations": [
        {
          "summary": "Enable/disable device",
          "parameters": [
            {
              "paramType": "path",
              "name": "id",
              "type": "string",
              "description": "Device unique ID",
              "required": true
            },
            {
              "paramType": "query",
              "name": "enabled",
              "type": "boolean",
              "description": "Device enable status",
              "required": true
            }
          ],
          "nickname": "Api::V1::Devices#update",
          "method": "patch"
        }
      ]
    }
  ],
  "authorizations": null
}